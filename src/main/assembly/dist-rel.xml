<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>src/main/assembly/dist/</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>src/main/assembly/dist-rel/</directory>
    </fileSet>
    <fileSet>
      <outputDirectory>/</outputDirectory>
      <directory>target/generated-dist/</directory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <excludes>
        <exclude>commons-logging:commons-logging</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
